  <form class="signup-form" action="/register" method="POST">

    <div class="form-body">
      <div class="horizontal-group">
        <div style="display: flex;">
          <div class="form-body">
            
            <label for="class" style="font-size: medium;">Choose Class:</label>
            <% if(data.details!=null) { %>
            <select name="class" id="class" style="font-size: medium;">
              <% data.details.forEach(function(item,index){ %>
              <option value="<%= item.classname%>"><%= item.classname%></option>
              <% }) %>
            </select>
            <input type="text" name="school" id="school" value="<%= data.schoolname%>" hidden>
            <% } %>
          </div>
        </div>
        <div class="form-group left">
          <label for="name" class="label-title">Name *</label>
          <input type="text" id="name" class="form-input" name="name" placeholder="enter yourname"
            required="required" />
        </div>

        <div class="form-group">
          <label for="age" class="label-title">Age*</label>
          <input type="text" id="age" class="form-input" name="age" placeholder="enter your age" required="required">
        </div>
        <div class="form-group">
          <label for="phone" class="label-title">Phone*</label>
          <input type="text" id="phone" class="form-input" name="phone" placeholder="enter your phone"
            required="required">
        </div>
        <div class="form-group left">
          <label for="address" class="label-title">Address *</label>
          <input type="text" id="address" class="form-input" name="address" placeholder="enter your email"
            required="required" />
        </div>
        <div class="form-group left">
          <label for="date" class="label-title">Date of birth *</label>
          <input type="date" id="date" class="form-input" name="date" placeholder="DOB" required="required" />
        </div>
        <div class="form-group left" style="display: flex;">
          <label for="hobbies" class="label-title">Hobbies:</label>
          <input type="checkbox" id="Dancing" name="hobbies" value="Dancing" style="padding: 0 10px 0;">
          <label for="hobbies" style="font-size: 16px;"> Dancing</label><br>
          <input type="checkbox" id="Singing" name="hobbies" value="Singing">
          <label for="Singing" style="font-size: 16px;"> Singing</label><br>
          <input type="checkbox" id="Sports" name="hobbies" value="Sports">
          <label for="Sports" style="font-size: 16px;"> Sports</label><br>
        </div>
        <div class="form-group">
          <label for="file" class="label-title">Upload profile photo*</label>
          <input type="file" id="file" class="form-input" name="file" placeholder="enter your file" />
        </div>
        <div class="form-footer">
          <span>* required</span>
          <button type="submit" class="btn" value="Register">Register</button>
        </div>

  </form>

  <!-- Script for range input label -->
  <script>
    var rangeLabel = document.getElementById("range-label");
    var experience = document.getElementById("experience");

    function change() {
      rangeLabel.innerText = experience.value + "K";
    }
  </script>

