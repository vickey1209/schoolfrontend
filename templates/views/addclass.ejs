    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>
<style>
    .nav-link {
        padding: 0;
        ;
    }
</style>

<body>

    </header>

    <!-- form header -->
    <div class="form-header">
        <h1>Add Class</h1>
    </div>


    <nav class="navbar navbar-expand-lg navbar-light bg-light" style="margin: 0px;">
      <div id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item active">
            <a class="nav-link" href="/">Home
              <span class="sr-only">(current)</span></a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/addschool">Add School</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/addclass">Add Class</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/selectschool">Add student</a>
          </li>                
          <li class="nav-item">
            <a class="nav-link" href="/listschool">List Schools</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/displayschool">Display Classes</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/liststudents">list Students</a>
          </li>
        </ul>
      </div>
    </nav>
    <form class="signup-form" action="/addclass" method="POST">
        <div class="form-body">
            <div class="horizontal-group">
                <h2>Select School</h2>
                <% if(details!=null) { %>
                        <select name="school" id="school" style="font-size: medium;">   
                        <% details.forEach(function(item){ %>
                            <option value="<%= item._id%>"><%= item.schoolname%></option> 
                        <% }) %>                      
                        </select>
                    
                <% } %>

    
                <div class="form-group">
                    <label for="classname" class="label-title">Class Name</label>
                    <input type="text" id="classname" class="form-input" name="classname"
                        placeholder="enter class name" required="required">
                </div>

                <div class="form-footer">
                    <span>* required</span>
                    <button type="submit" class="btn" value="addclass">Add Class</button>
                </div>
            </div>
        </div>
    </form>

    <script>
        var rangeLabel = document.getElementById("range-label");
        var experience = document.getElementById("experience");

        function change() {
            rangeLabel.innerText = experience.value + "K";
        }
    </script>

</body>

</html>