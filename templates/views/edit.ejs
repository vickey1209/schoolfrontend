  <form class="signup-form" action="/edit/<%= data.details._id %>" id="my_form" method="POST">

    <div class="form-body">
      <div class="horizontal-group">
        <div style="display: flex;">
          <div class="form-body">
            
            <label for="class" style="font-size: medium;">Choose Class:</label>
            <% if(data.details1!=null) { %>
            <select name="class" id="class" style="font-size: medium;">
              <% data.details1.forEach(function(item){ %>
              <option value="<%= item.classname%>"><%= item.classname%></option>
              <% }) %>
            </select>
            <input type="text" name="school" id="school" value="<%= data.details.school%>" hidden>

            <% } %>
          </div>
        </div>
      <div class="form-group left">
        <label for="name" class="label-title">Name *</label>
        <input type="text" id="name" class="form-input" name="name" placeholder="enter your name"
          value="<%= data.details.name %>" required="required" />
      </div>
      <div class="form-group right">
        <label for="age" class="label-title">Age*</label>
        <input type="text" id="age" class="form-input" name="age" value="<%= data.details.age %>"
          placeholder="enter your last name" />
      </div>
    </div>

    <!-- Email -->
    <div class="form-group">
      <label for="phone" class="label-title">Phone*</label>
      <input type="phone" id="phone" class="form-input" name="phone" placeholder="enter your phone"
        value="<%= data.details.phone %>" required="required">
    </div>

    <div class="form-group">
      <label for="address" class="label-title">Address*</label>
      <input type="text" id="address" class="form-input" name="address" placeholder="enter your address"
        value="<%= data.details.address %>" required="required">
    </div>

    <div class="form-group">
      <label for="date" class="label-title">Date of birth *</label>
      <input type="date" id="date" class="form-input" name="date" value="<%= data.details.date %>"
        placeholder="enter your file" />
    </div>
    <div class="form-group">
      <label for="file" class="label-title">Upload profile photo*</label>
      <input type="file" id="file" class="form-input" name="file" placeholder="enter your file" />
    </div>
    <div class="form-group left" style="display: flex;">
      <label for="hobbies" class="label-title">Hobbies:</label>
      <input type="checkbox" id="Dancing" name="hobbies" value="Dancing" <%=data.details.hobbies=='Dancing' ?'checked':'' %>>
      <label for="hobbies" style="font-size: 16px;"> Dancing</label><br>
      <input type="checkbox" id="Singing" name="hobbies" value="Singing" <%=data.details.hobbies=='Singing' ?'checked':'' %>>
      <label for="Singing" style="font-size: 16px;"> Singing</label><br>
      <input type="checkbox" id="Sports" name="hobbies" value="Sports" <%=data.details.hobbies=='Sports' ?'checked':''
        %>>
      <label for="Sports" style="font-size: 16px;"> Sports</label><br>
    </div>

    <div class="form-footer">
      <span>* required</span>
      <button type="submit" class="btn" value="Update" onclick=" submit();">Update</button>
    </div>

  </form>

